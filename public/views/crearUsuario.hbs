{{> header }}
<body>
    <header class="py-0 ">
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid mx-sm-1 mx-1 mx-lg-5">
                <a class="navbar-brand" href="#">
                    <img id="imgLogo" src="https://www.novomatic.com/themes/novomatic/images/novomatic_n.svg" alt="Logo"
                        width="45" height="45">
                </a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex justify-content-lg-end" id="navbarNav">
                    <ul class="navbar-nav d-flex justify-content-center align-items-center gap-1 gap-lg-4 my-2">
                        <li class="nav-item hover-header py-2 ">
                            <a class="text-decoration-none text-white " href="/loginNovo">
                                Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid">
        <div class="row">
            <aside class="col-12 col-md-2 px-0  ">
                <div class="d-flex justify-content-center align-items-center gap-3 my-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>

                    <p class="mb-0">Nombre</p>
                </div>
                <ul class=" d-flex flex-column justify-content-center px-0 my-0">
                    <!-- <a class="px-5 py-2 border-bottom border-dark" href="listarRoles.html">Roles</a> -->
                   <a class="px-5 py-2 border-bottom border-dark" href="/listarProductos">Productos</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarClientes">Clientes</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarUsuarios">Usuarios</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarVentas">Ventas</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarCartera">Cartera</a>
                
                </ul>
            </aside>

            <section class="col-12 col-md-10 my-0 d-flex justify-content-start flex-column align-items-center">
                <h1 class="text-center py-5 my-0">CREAR USUARIO</h1>

                <form class="d-flex flex-column justify-content-center w-75 gap-lg-4 mb-5 mx-5">
                    <div class="d-flex justify-content-center gap-3">
                        <div class="div1 w-100">
                            <div class="mb-3">
                                <label for="nombre" class="form-label fw-bold">Nombre</label>
                                <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp" placeholder="Nombre" required>
                            </div>

                            <div class="mb-3">
                                <label for="apellido" class="form-label fw-bold">Apellido</label>
                                <input type="text" class="form-control" id="apellido" aria-describedby="emailHelp" placeholder="Apellido" required>
                            </div>

                            <div class="mb-3">
                                <label for="identificacion" class="form-label fw-bold">Identificación</label>
                                <input type="text" class="form-control" id="identificacion" aria-describedby="emailHelp" placeholder="Identificación" required>
                            </div>
                        </div>

                        <div class="div2 w-100">
                            <div class="mb-3">
                                <label for="correo" class="form-label fw-bold">Correo</label>
                                <input type="email" class="form-control" id="correo" aria-describedby="emailHelp" placeholder="Correo" required>
                            </div>

                            <div class="mb-3">
                                <label for="telefono" class="form-label fw-bold">Teléfono</label>
                                <input type="text" class="form-control" id="telefono" aria-describedby="emailHelp" placeholder="Teléfono" required>
                            </div>
                            <div class="mb-3">
                                <label for="direccion" class="form-label fw-bold">Dirección</label>
                                <input type="text" class="form-control" id="direccion" aria-describedby="emailHelp" placeholder="Dirección" required>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center  gap-4  w-100">
                        <div class="div_botones w-100">
                            <button id="btnRegistrar" type="submit" class="btn btn-dark w-100 btn-styles">Enviar</button>
                        </div>

                        <div class="div_botones d-flex justify-content-center w-100">
                            <button type="submit" class="btn btn-dark w-100 btn-styles">Limpiar</button>
                        </div>
                    </div>
                </form>

            </section>
        </div>

    </main>
    <script src="../assets/js/funcionesUsuarios.js"></script>
    <script src="../assets/js/bootstrap.min.js"></script>

</body>

</html>