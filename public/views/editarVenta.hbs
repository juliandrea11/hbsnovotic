{{> header }}
<body>
    <header class="py-0 ">
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid mx-sm-1 mx-1 mx-lg-5">
                <a class="navbar-brand" href="#">
                    <img id="imgLogo" src="https://www.novomatic.com/themes/novomatic/images/novomatic_n.svg"
                        alt="Bootstrap" width="45" height="45">
                </a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex justify-content-lg-end" id="navbarNav">
                    <ul class="navbar-nav d-flex justify-content-center align-items-center gap-1 gap-lg-4 my-2">
                        <li class="nav-item hover-header py-2 ">
                            <a class="text-decoration-none text-white " href="/loginNovo">
                                Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid">
        <div class="row">
            <aside class="col-12 col-md-2 px-0  ">
                <div class="d-flex justify-content-center align-items-center gap-3 my-3">
                    <!-- <img src="" alt=""> -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>

                    <p class="mb-0">Nombre</p>
                </div>
                <ul class=" d-flex flex-column justify-content-center px-0 my-0">
                    <!-- <a class="px-5 py-2 border-bottom border-dark" href="listarRoles.html">Roles</a> -->
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarProductos">Productos</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarClientes">Clientes</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarUsuarios">Usuarios</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarVentas">Ventas</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="/listarCartera">Cartera</a>
                    
                </ul>
            </aside>

            <section class="col-12 col-md-10 my-0 d-flex justify-content-start flex-column align-items-center">
                <h1 class="text-center py-5 my-0">EDITAR VENTA</h1>

                <form class="d-flex flex-column justify-content-center w-75 gap-lg-4 mb-5 mx-5">
                    <div class="d-flex justify-content-center gap-3">
                        <div class="div1 w-100">
                            <div class="mb-3">
                                <label for="codigo" class="form-label fw-bold">Código de la venta</label>
                                <input type="text" class="form-control" id="codigo" placeholder="Código de la venta" required>
                            </div>

                            <div class="mb-3">
                                <label for="cliente" class="form-label fw-bold">Cliente</label>
                                <select class="form-select" aria-label="Default select example" id="cliente">
                                    <option selected>Seleccionar</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="producto" class="form-label fw-bold">Producto</label>
                                <select class="form-select" aria-label="Default select example" id="producto">
                                    <option selected>Seleccionar</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="total" class="form-label fw-bold">Valor total venta</label>
                                <input type="number" class="form-control" id="valortotal" placeholder="Valor total venta" required>
                            </div>

                        </div>

                        <div class="div1 w-100">
                            <div class="mb-3">
                                <label for="cuotas" class="form-label fw-bold">Cantidad de cuotas</label>
                                <input type="number" class="form-control" id="cantidadcuotas" placeholder="Cantidad de cuotas" required>
                            </div>

                            <div class="mb-3">
                                <label for="fecha" class="form-label fw-bold">Fecha de la venta</label>
                                <input type="date" class="form-control" id="fecha" placeholder="Fecha de la venta" required>
                            </div>

                            <div class="mb-3">
                                <label for="factura" class="form-label fw-bold">Factura</label>
                                <input type="file" class="form-control" id="factura" placeholder="Factura" required>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center  gap-4  w-100">
                        <div class="div_botones w-100">
                            <button type="submit" class="btn btn-dark w-100 btn-styles"
                                id="btnRegistrar">Enviar</button>
                        </div>

                        <div class="div_botones d-flex justify-content-center w-100">
                            <button type="submit" class="btn btn-dark w-100 btn-styles">Limpiar</button>
                        </div>
                    </div>
                </form>

            </section>
        </div>

    </main>
    <script src="../assets/js/bootstrap.min.js"></script>
</body>

</html>